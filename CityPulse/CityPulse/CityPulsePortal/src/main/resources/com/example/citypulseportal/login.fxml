<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.citypulseportal.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="40" right="30" bottom="40" left="30"/>
            </padding>

            <Label text="CityPulsePortal Login" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <TextField fx:id="usernameField" promptText="Username" maxWidth="200"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"/>

            <Button text="Login" onAction="#handleLogin" maxWidth="100"/>
        </VBox>
    </center>
</BorderPane>
